{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Whis",
  "version": "0.7.0",
  "identifier": "ink.whis.mobile",
  "build": {
    "beforeDevCommand": { "cwd": "ui", "script": "npm run dev" },
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": { "cwd": "ui", "script": "npm run build" },
    "frontendDist": "ui/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Whis",
        "width": 400,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "minSdkVersion": 26
    }
  }
}
